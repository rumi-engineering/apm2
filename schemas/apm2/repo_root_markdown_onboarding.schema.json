{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://apm2.dev/schemas/apm2/repo_root_markdown_onboarding.schema.json",
  "title": "RepoRootMarkdownOnboarding",
  "description": "Token-efficient, machine-readable onboarding index for root Markdown docs. Intended for CAC ingestion and audit (hashes + file pointers) without embedding full doc text.",
  "type": "object",
  "required": ["schema", "schema_version", "repo", "onboarding", "root_markdown"],
  "properties": {
    "schema": {
      "type": "string",
      "const": "apm2.repo_root_markdown_onboarding.v1"
    },
    "schema_version": {
      "type": "string",
      "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$"
    },
    "meta": {
      "type": "object",
      "required": ["generated_at_utc", "generator"],
      "properties": {
        "generated_at_utc": { "type": "string", "format": "date-time" },
        "generator": {
          "type": "object",
          "required": ["id"],
          "properties": {
            "id": { "type": "string", "minLength": 1, "maxLength": 128 },
            "version": { "type": "string", "minLength": 1, "maxLength": 64 }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },
    "repo": {
      "type": "object",
      "required": ["name", "root", "git"],
      "properties": {
        "name": { "type": "string", "minLength": 1, "maxLength": 256 },
        "root": { "type": "string", "minLength": 1, "maxLength": 256 },
        "git": {
          "type": "object",
          "required": ["origin_remote", "head_commit", "head_tree", "dirty_worktree_expected"],
          "properties": {
            "origin_remote": { "type": "string", "minLength": 1, "maxLength": 2048 },
            "head_commit": { "$ref": "git_object_ref.schema.json" },
            "head_tree": { "$ref": "git_object_ref.schema.json" },
            "dirty_worktree_expected": { "type": "boolean" }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },
    "onboarding": {
      "type": "object",
      "required": ["goals", "read_first", "precedence", "worktree_rules"],
      "properties": {
        "goals": {
          "type": "array",
          "items": { "type": "string" },
          "minItems": 1
        },
        "read_first": {
          "type": "array",
          "items": { "type": "string" },
          "minItems": 1
        },
        "precedence": {
          "type": "array",
          "items": { "type": "string" },
          "minItems": 1
        },
        "schema_map": {
          "type": "object",
          "maxProperties": 128,
          "propertyNames": { "pattern": "^[A-Za-z0-9_.:-]{1,128}$" },
          "additionalProperties": { "type": "string", "minLength": 1, "maxLength": 256 }
        },
        "worktree_rules": {
          "type": "array",
          "items": { "type": "string", "minLength": 1, "maxLength": 512 },
          "minItems": 1
        }
      },
      "additionalProperties": false
    },
    "root_markdown": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["path", "schema", "bytes", "content_hash", "agent_onboarding"],
        "properties": {
          "path": { "type": "string", "minLength": 1 },
          "schema": { "type": "string", "minLength": 1, "maxLength": 128 },
          "bytes": { "type": "integer", "minimum": 0 },
          "content_hash": { "type": "string", "pattern": "^b3-256:[a-f0-9]{64}$" },
          "audience": {
            "type": "array",
            "items": { "type": "string", "minLength": 1, "maxLength": 64 },
            "minItems": 1
          },
          "agent_onboarding": {
            "type": "object",
            "required": ["read"],
            "properties": {
              "read": { "type": "boolean" },
              "priority": { "type": "integer", "minimum": 1, "maximum": 100 }
            },
            "additionalProperties": false
          },
          "superseded_by": {
            "type": "array",
            "items": { "type": "string", "minLength": 1 },
            "minItems": 1
          },
          "abstract": { "type": "string", "minLength": 1, "maxLength": 512 }
        },
        "additionalProperties": false
      }
    }
  },
  "unevaluatedProperties": false
}
