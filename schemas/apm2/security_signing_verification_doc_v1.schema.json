{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://apm2.dev/schemas/apm2/security_signing_verification_doc_v1.schema.json",
  "title": "SecuritySigningVerificationDocumentV1",
  "type": "object",
  "required": [
    "schema",
    "schema_version",
    "kind",
    "meta",
    "payload"
  ],
  "properties": {
    "schema": {
      "type": "string",
      "const": "apm2.security.signing_verification_doc.v1"
    },
    "schema_version": {
      "type": "string",
      "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$"
    },
    "kind": {
      "type": "string",
      "const": "security.signing_verification_document"
    },
    "meta": {
      "type": "object",
      "required": [
        "canonicalizer",
        "classification",
        "created_at",
        "source_of_truth_refs",
        "stable_id",
        "status"
      ],
      "properties": {
        "stable_id": {
          "type": "string",
          "pattern": "^dcp://[a-z0-9.-]+/[A-Za-z0-9_./:-]+(@[A-Za-z0-9_.-]+)?$"
        },
        "status": {
          "type": "string",
          "enum": [
            "ACTIVE",
            "DRAFT",
            "DEPRECATED"
          ]
        },
        "classification": {
          "type": "string",
          "enum": [
            "PUBLIC",
            "INTERNAL",
            "CONFIDENTIAL",
            "RESTRICTED"
          ]
        },
        "source_of_truth_refs": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string",
            "minLength": 1,
            "maxLength": 256
          }
        },
        "last_aligned_rfc": {
          "type": "string",
          "minLength": 1,
          "maxLength": 64
        },
        "replaces": {
          "type": "string",
          "minLength": 1,
          "maxLength": 256
        },
        "created_at": {
          "type": "string",
          "format": "date-time"
        },
        "updated_at": {
          "type": "string",
          "format": "date-time"
        },
        "canonicalizer": {
          "type": "object",
          "required": [
            "canonicalizer_id",
            "canonicalizer_version",
            "vectors_ref"
          ],
          "properties": {
            "canonicalizer_id": {
              "type": "string",
              "minLength": 1,
              "maxLength": 128
            },
            "canonicalizer_version": {
              "type": "string",
              "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$"
            },
            "vectors_ref": {
              "type": "string",
              "pattern": "^dcp://[a-z0-9.-]+/[A-Za-z0-9_./:-]+(@[A-Za-z0-9_.-]+)?$"
            }
          },
          "additionalProperties": false
        },
        "provenance": {
          "type": "object",
          "properties": {
            "actor_id": {
              "type": "string",
              "minLength": 1,
              "maxLength": 128
            },
            "work_id": {
              "type": "string",
              "minLength": 1,
              "maxLength": 128
            },
            "source_receipts": {
              "type": "array",
              "items": {
                "type": "string",
                "pattern": "^dcp://[a-z0-9.-]+/[A-Za-z0-9_./:-]+(@[A-Za-z0-9_.-]+)?$"
              }
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },
    "payload": {
      "type": "object",
      "required": [
        "title",
        "scope_boundary",
        "objectives",
        "trust_chain",
        "workflow_permissions",
        "signing_profiles",
        "verification_requirements",
        "provenance_requirements",
        "terminology",
        "transparency_and_audit",
        "failure_modes",
        "scale_profile",
        "cryptography_posture"
      ],
      "properties": {
        "title": {
          "type": "string",
          "const": "Signing and Verification"
        },
        "scope_boundary": {
          "type": "object",
          "required": [
            "document_scope",
            "runtime_boundary_note"
          ],
          "properties": {
            "document_scope": {
              "type": "string",
              "minLength": 1,
              "maxLength": 256
            },
            "runtime_boundary_note": {
              "type": "string",
              "minLength": 1,
              "maxLength": 512
            }
          },
          "additionalProperties": false
        },
        "objectives": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string",
            "minLength": 1,
            "maxLength": 512
          }
        },
        "trust_chain": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "#/$defs/trust_stage"
          }
        },
        "workflow_permissions": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "#/$defs/permission"
          }
        },
        "signing_profiles": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "#/$defs/signing_profile"
          }
        },
        "verification_requirements": {
          "$ref": "#/$defs/verification_requirements"
        },
        "provenance_requirements": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string",
            "minLength": 1,
            "maxLength": 512
          }
        },
        "terminology": {
          "type": "object",
          "required": [
            "attestation_definition",
            "runtime_fact_authentication_definition"
          ],
          "properties": {
            "attestation_definition": {
              "type": "string",
              "minLength": 1,
              "maxLength": 512
            },
            "runtime_fact_authentication_definition": {
              "type": "string",
              "minLength": 1,
              "maxLength": 512
            }
          },
          "additionalProperties": false
        },
        "transparency_and_audit": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string",
            "minLength": 1,
            "maxLength": 512
          }
        },
        "failure_modes": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "#/$defs/failure_mode"
          }
        },
        "scale_profile": {
          "type": "object",
          "required": [
            "capacity_target",
            "verification_cost_controls"
          ],
          "properties": {
            "capacity_target": {
              "type": "string",
              "const": "multi-exabyte"
            },
            "verification_cost_controls": {
              "type": "array",
              "minItems": 1,
              "items": {
                "type": "string",
                "minLength": 1,
                "maxLength": 512
              }
            }
          },
          "additionalProperties": false
        },
        "cryptography_posture": {
          "type": "object",
          "required": [
            "long_lived_private_keys",
            "pqc_status",
            "pqc_note"
          ],
          "properties": {
            "long_lived_private_keys": {
              "type": "string",
              "enum": [
                "REJECTED_BY_DESIGN"
              ]
            },
            "pqc_status": {
              "type": "string",
              "const": "DEFERRED"
            },
            "pqc_note": {
              "type": "string",
              "minLength": 1,
              "maxLength": 512
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    }
  },
  "$defs": {
    "trust_stage": {
      "type": "object",
      "required": [
        "stage_id",
        "name",
        "description"
      ],
      "properties": {
        "stage_id": {
          "type": "string",
          "pattern": "^SIG-STAGE-[0-9]{2}$"
        },
        "name": {
          "type": "string",
          "minLength": 1,
          "maxLength": 160
        },
        "description": {
          "type": "string",
          "minLength": 1,
          "maxLength": 512
        }
      },
      "additionalProperties": false
    },
    "permission": {
      "type": "object",
      "required": [
        "name",
        "required",
        "purpose"
      ],
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1,
          "maxLength": 64
        },
        "required": {
          "type": "boolean"
        },
        "purpose": {
          "type": "string",
          "minLength": 1,
          "maxLength": 256
        }
      },
      "additionalProperties": false
    },
    "signing_profile": {
      "type": "object",
      "required": [
        "profile_id",
        "artifact_type",
        "sign_command",
        "outputs"
      ],
      "properties": {
        "profile_id": {
          "type": "string",
          "pattern": "^SIG-PROFILE-[A-Z0-9-]+$"
        },
        "artifact_type": {
          "type": "string",
          "enum": [
            "binary_blob",
            "container_image"
          ]
        },
        "sign_command": {
          "type": "string",
          "minLength": 1,
          "maxLength": 128
        },
        "outputs": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string",
            "minLength": 1,
            "maxLength": 64
          }
        }
      },
      "additionalProperties": false
    },
    "verification_requirements": {
      "type": "object",
      "required": [
        "binary_verification_command",
        "image_verification_command",
        "oidc_issuer_constraint",
        "certificate_identity_constraint"
      ],
      "properties": {
        "binary_verification_command": {
          "type": "string",
          "minLength": 1,
          "maxLength": 128
        },
        "image_verification_command": {
          "type": "string",
          "minLength": 1,
          "maxLength": 128
        },
        "oidc_issuer_constraint": {
          "type": "string",
          "minLength": 1,
          "maxLength": 256
        },
        "certificate_identity_constraint": {
          "type": "string",
          "minLength": 1,
          "maxLength": 512
        },
        "identity_policy_notes": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1,
            "maxLength": 512
          }
        }
      },
      "additionalProperties": false
    },
    "failure_mode": {
      "type": "object",
      "required": [
        "condition",
        "interpretation",
        "response"
      ],
      "properties": {
        "condition": {
          "type": "string",
          "minLength": 1,
          "maxLength": 256
        },
        "interpretation": {
          "type": "string",
          "minLength": 1,
          "maxLength": 512
        },
        "response": {
          "type": "string",
          "minLength": 1,
          "maxLength": 512
        }
      },
      "additionalProperties": false
    }
  },
  "unevaluatedProperties": false
}
