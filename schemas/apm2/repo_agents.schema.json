{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://apm2.dev/schemas/apm2/repo_agents.schema.json",
  "title": "RepoAgents",
  "description": "Token-efficient, machine-readable repo overview for agents (kept as AGENTS.md containing JSON).",
  "type": "object",
  "required": ["schema", "schema_version", "project", "crates", "system_model", "protocol_refs", "doc_refs", "governance"],
  "properties": {
    "schema": { "type": "string", "const": "apm2.repo_agents.v1" },
    "schema_version": { "type": "string", "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$" },
    "project": {
      "type": "object",
      "required": ["name", "version", "edition", "msrv"],
      "properties": {
        "name": { "type": "string", "minLength": 1, "maxLength": 256 },
        "version": { "type": "string", "minLength": 1, "maxLength": 64 },
        "edition": { "type": "string", "minLength": 1, "maxLength": 16 },
        "msrv": { "type": "string", "minLength": 1, "maxLength": 16 }
      },
      "additionalProperties": false
    },
    "runtime": {
      "type": "object",
      "required": ["os", "ipc", "default_config"],
      "properties": {
        "os": { "type": "string", "minLength": 1, "maxLength": 64 },
        "ipc": { "type": "string", "minLength": 1, "maxLength": 64 },
        "default_config": { "type": "string", "minLength": 1, "maxLength": 256 }
      },
      "additionalProperties": false
    },
    "binaries": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "crate", "role"],
        "properties": {
          "name": { "type": "string", "minLength": 1, "maxLength": 64 },
          "crate": { "type": "string", "minLength": 1, "maxLength": 64 },
          "role": { "type": "string", "minLength": 1, "maxLength": 64 }
        },
        "additionalProperties": false
      }
    },
    "commands": {
      "type": "object",
      "maxProperties": 64,
      "propertyNames": { "pattern": "^[A-Za-z0-9_.:-]{1,64}$" },
      "additionalProperties": {
        "type": "array",
        "items": { "type": "string", "minLength": 1, "maxLength": 512 },
        "minItems": 1
      }
    },
    "crates": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["name", "path", "role"],
        "properties": {
          "name": { "type": "string", "minLength": 1, "maxLength": 64 },
          "path": { "type": "string", "minLength": 1, "maxLength": 256 },
          "role": { "type": "string", "minLength": 1, "maxLength": 256 },
          "loc_approx": { "type": "integer", "minimum": 0 }
        },
        "additionalProperties": false
      }
    },
    "system_model": {
      "type": "object",
      "required": ["layers", "patterns"],
      "properties": {
        "layers": {
          "type": "array",
          "items": { "type": "string", "minLength": 1, "maxLength": 64 },
          "minItems": 1
        },
        "patterns": {
          "type": "array",
          "items": { "type": "string", "minLength": 1, "maxLength": 64 },
          "minItems": 1
        }
      },
      "additionalProperties": false
    },
    "protocol_refs": {
      "type": "object",
      "required": ["ipc_docs", "event_schema", "tool_protocol"],
      "properties": {
        "ipc_docs": { "type": "string", "minLength": 1, "maxLength": 256 },
        "event_schema": { "type": "string", "minLength": 1, "maxLength": 256 },
        "tool_protocol": { "type": "string", "minLength": 1, "maxLength": 256 }
      },
      "additionalProperties": false
    },
    "doc_refs": {
      "type": "object",
      "maxProperties": 64,
      "propertyNames": { "pattern": "^[A-Za-z0-9_./:-]{1,64}$" },
      "additionalProperties": { "type": "string", "minLength": 1, "maxLength": 256 }
    },
    "governance": {
      "type": "object",
      "required": ["dominance_order", "worktree"],
      "properties": {
        "dominance_order": {
          "type": "array",
          "items": { "type": "string", "minLength": 1, "maxLength": 64 },
          "minItems": 1
        },
        "worktree": {
          "type": "object",
          "required": ["dirty_expected", "git_clean_required", "unrelated_changes_policy"],
          "properties": {
            "dirty_expected": { "type": "boolean" },
            "git_clean_required": { "type": "boolean" },
            "unrelated_changes_policy": { "type": "string", "minLength": 1, "maxLength": 128 }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    }
  },
  "unevaluatedProperties": false
}
