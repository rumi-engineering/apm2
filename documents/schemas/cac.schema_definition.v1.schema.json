{
  "$id": "cac.schema_definition.v1.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "allOf": [
    {
      "$ref": "cac.artifact.envelope.v1.schema.json"
    },
    {
      "properties": {
        "kind": {
          "const": "schema.definition"
        },
        "payload": {
          "additionalProperties": false,
          "properties": {
            "compatibility_policy": {
              "enum": [
                "strict",
                "backward_compatible_additive",
                "custom"
              ],
              "type": "string"
            },
            "draft": {
              "enum": [
                "2020-12"
              ],
              "type": "string"
            },
            "json_schema": {
              "type": "object"
            },
            "schema_id": {
              "pattern": "^cac\\.[A-Za-z0-9_.-]+\\.v[0-9]+$",
              "type": "string"
            },
            "schema_major": {
              "minimum": 1,
              "type": "integer"
            },
            "validator_profile": {
              "additionalProperties": false,
              "properties": {
                "max_bytes": {
                  "minimum": 1,
                  "type": "integer"
                },
                "max_depth": {
                  "minimum": 1,
                  "type": "integer"
                },
                "unknown_fields": {
                  "enum": [
                    "reject",
                    "ignore"
                  ],
                  "type": "string"
                }
              },
              "type": "object"
            }
          },
          "required": [
            "schema_id",
            "schema_major",
            "draft",
            "json_schema"
          ],
          "type": "object"
        },
        "schema": {
          "const": "cac.schema_definition.v1"
        }
      }
    }
  ],
  "title": "CAC SchemaDefinition Artifact v1"
}
