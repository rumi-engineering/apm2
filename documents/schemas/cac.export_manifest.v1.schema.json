{
  "$id": "cac.export_manifest.v1.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "allOf": [
    {
      "$ref": "cac.artifact.envelope.v1.schema.json"
    },
    {
      "properties": {
        "kind": {
          "const": "export.manifest"
        },
        "payload": {
          "additionalProperties": false,
          "properties": {
            "conformance_report_hash": {
              "$ref": "cac.common.v1.schema.json#/$defs/content_hash"
            },
            "export_root": {
              "type": "string"
            },
            "files": {
              "items": {
                "additionalProperties": false,
                "properties": {
                  "bytes": {
                    "minimum": 0,
                    "type": "integer"
                  },
                  "content_hash": {
                    "$ref": "cac.common.v1.schema.json#/$defs/content_hash"
                  },
                  "path": {
                    "type": "string"
                  }
                },
                "required": [
                  "path",
                  "content_hash"
                ],
                "type": "object"
              },
              "type": "array"
            },
            "source_inputs": {
              "items": {
                "additionalProperties": false,
                "properties": {
                  "content_hash": {
                    "$ref": "cac.common.v1.schema.json#/$defs/content_hash"
                  },
                  "stable_id": {
                    "$ref": "cac.common.v1.schema.json#/$defs/stable_id"
                  }
                },
                "required": [
                  "stable_id",
                  "content_hash"
                ],
                "type": "object"
              },
              "type": "array"
            },
            "vendor_id": {
              "type": "string"
            },
            "target_profile_id": {
              "$ref": "cac.common.v1.schema.json#/$defs/stable_id"
            }
          },
          "required": [
            "vendor_id",
            "target_profile_id",
            "export_root",
            "files",
            "source_inputs"
          ],
          "type": "object"
        },
        "schema": {
          "const": "cac.export_manifest.v1"
        }
      }
    }
  ],
  "title": "CAC ExportManifest v1"
}
