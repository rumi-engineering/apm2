{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://apm2.dev/schemas/apm2/security_threat_model_doc_v1.schema.json",
  "title": "SecurityThreatModelDocumentV1",
  "type": "object",
  "required": [
    "schema",
    "schema_version",
    "kind",
    "meta",
    "payload"
  ],
  "properties": {
    "schema": {
      "type": "string",
      "const": "apm2.security.threat_model_doc.v1"
    },
    "schema_version": {
      "type": "string",
      "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$"
    },
    "kind": {
      "type": "string",
      "const": "security.threat_model_document"
    },
    "meta": {
      "type": "object",
      "required": [
        "canonicalizer",
        "classification",
        "created_at",
        "source_of_truth_refs",
        "stable_id",
        "status"
      ],
      "properties": {
        "stable_id": {
          "type": "string",
          "pattern": "^dcp://[a-z0-9.-]+/[A-Za-z0-9_./:-]+(@[A-Za-z0-9_.-]+)?$"
        },
        "status": {
          "type": "string",
          "enum": [
            "ACTIVE",
            "DRAFT",
            "DEPRECATED"
          ]
        },
        "classification": {
          "type": "string",
          "enum": [
            "PUBLIC",
            "INTERNAL",
            "CONFIDENTIAL",
            "RESTRICTED"
          ]
        },
        "source_of_truth_refs": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string",
            "minLength": 1,
            "maxLength": 256
          }
        },
        "last_aligned_rfc": {
          "type": "string",
          "minLength": 1,
          "maxLength": 64
        },
        "replaces": {
          "type": "string",
          "minLength": 1,
          "maxLength": 256
        },
        "created_at": {
          "type": "string",
          "format": "date-time"
        },
        "updated_at": {
          "type": "string",
          "format": "date-time"
        },
        "canonicalizer": {
          "type": "object",
          "required": [
            "canonicalizer_id",
            "canonicalizer_version",
            "vectors_ref"
          ],
          "properties": {
            "canonicalizer_id": {
              "type": "string",
              "minLength": 1,
              "maxLength": 128
            },
            "canonicalizer_version": {
              "type": "string",
              "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$"
            },
            "vectors_ref": {
              "type": "string",
              "pattern": "^dcp://[a-z0-9.-]+/[A-Za-z0-9_./:-]+(@[A-Za-z0-9_.-]+)?$"
            }
          },
          "additionalProperties": false
        },
        "provenance": {
          "type": "object",
          "properties": {
            "actor_id": {
              "type": "string",
              "minLength": 1,
              "maxLength": 128
            },
            "work_id": {
              "type": "string",
              "minLength": 1,
              "maxLength": 128
            },
            "source_receipts": {
              "type": "array",
              "items": {
                "type": "string",
                "pattern": "^dcp://[a-z0-9.-]+/[A-Za-z0-9_./:-]+(@[A-Za-z0-9_.-]+)?$"
              }
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },
    "payload": {
      "type": "object",
      "required": [
        "title",
        "source_of_truth",
        "adversary_assumptions",
        "security_boundary",
        "primary_attack_surfaces",
        "threat_classes",
        "high_value_security_properties",
        "operational_priorities",
        "scale_profile",
        "cryptography_posture"
      ],
      "properties": {
        "title": {
          "type": "string",
          "const": "Threat Model"
        },
        "source_of_truth": {
          "type": "object",
          "required": [
            "artifact",
            "scope"
          ],
          "properties": {
            "artifact": {
              "type": "string",
              "minLength": 1,
              "maxLength": 256
            },
            "scope": {
              "type": "string",
              "minLength": 1,
              "maxLength": 512
            }
          },
          "additionalProperties": false
        },
        "adversary_assumptions": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string",
            "minLength": 1,
            "maxLength": 512
          }
        },
        "security_boundary": {
          "type": "string",
          "minLength": 1,
          "maxLength": 512
        },
        "primary_attack_surfaces": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "#/$defs/attack_surface"
          }
        },
        "threat_classes": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "#/$defs/threat_class"
          }
        },
        "high_value_security_properties": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string",
            "minLength": 1,
            "maxLength": 512
          }
        },
        "operational_priorities": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string",
            "minLength": 1,
            "maxLength": 512
          }
        },
        "scale_profile": {
          "$ref": "#/$defs/scale_profile"
        },
        "cryptography_posture": {
          "$ref": "#/$defs/cryptography_posture"
        }
      },
      "additionalProperties": false
    }
  },
  "$defs": {
    "attack_surface": {
      "type": "object",
      "required": [
        "surface_id",
        "name",
        "description"
      ],
      "properties": {
        "surface_id": {
          "type": "string",
          "pattern": "^TM-SURFACE-[0-9]{2}$"
        },
        "name": {
          "type": "string",
          "minLength": 1,
          "maxLength": 128
        },
        "description": {
          "type": "string",
          "minLength": 1,
          "maxLength": 512
        }
      },
      "additionalProperties": false
    },
    "threat_class": {
      "type": "object",
      "required": [
        "class_id",
        "name",
        "threats",
        "required_controls"
      ],
      "properties": {
        "class_id": {
          "type": "string",
          "pattern": "^TM-CLASS-[0-9]{2}$"
        },
        "name": {
          "type": "string",
          "minLength": 1,
          "maxLength": 160
        },
        "threats": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string",
            "minLength": 1,
            "maxLength": 512
          }
        },
        "required_controls": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string",
            "minLength": 1,
            "maxLength": 512
          }
        }
      },
      "additionalProperties": false
    },
    "scale_profile": {
      "type": "object",
      "required": [
        "capacity_target",
        "verification_economics",
        "bounded_decoding",
        "proof_size_controls"
      ],
      "properties": {
        "capacity_target": {
          "type": "string",
          "const": "multi-exabyte"
        },
        "verification_economics": {
          "type": "object",
          "required": [
            "identity_proof_complexity",
            "receipt_membership_complexity",
            "batch_signature_or_quorum_amortization"
          ],
          "properties": {
            "identity_proof_complexity": {
              "type": "string",
              "const": "O(log n)"
            },
            "receipt_membership_complexity": {
              "type": "string",
              "const": "O(log B)"
            },
            "batch_signature_or_quorum_amortization": {
              "type": "string",
              "const": "O(1) per batch family"
            }
          },
          "additionalProperties": false
        },
        "bounded_decoding": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string",
            "minLength": 1,
            "maxLength": 256
          }
        },
        "proof_size_controls": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string",
            "minLength": 1,
            "maxLength": 256
          }
        }
      },
      "additionalProperties": false
    },
    "cryptography_posture": {
      "type": "object",
      "required": [
        "current_profile",
        "pqc_status",
        "pqc_note"
      ],
      "properties": {
        "current_profile": {
          "type": "string",
          "minLength": 1,
          "maxLength": 256
        },
        "pqc_status": {
          "type": "string",
          "const": "DEFERRED"
        },
        "pqc_note": {
          "type": "string",
          "minLength": 1,
          "maxLength": 512
        }
      },
      "additionalProperties": false
    }
  },
  "unevaluatedProperties": false
}
