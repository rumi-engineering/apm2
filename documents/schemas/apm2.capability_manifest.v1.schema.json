{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://apm2.dev/schemas/cac/capability_manifest.schema.json",
  "title": "CapabilityManifest",
  "description": "Capability manifest for an APM2 binary, enumerating commands, capabilities, and selftest references with binary hash binding.",
  "type": "object",
  "required": [
    "schema_version",
    "binary_hash",
    "version",
    "target",
    "profile",
    "commands",
    "capabilities",
    "selftest_refs"
  ],
  "properties": {
    "schema_version": {
      "type": "string",
      "description": "Schema version for the manifest format (e.g., '2026-01-27').",
      "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
    },
    "binary_hash": {
      "type": "string",
      "description": "BLAKE3 hash binding the manifest to a specific binary (64-character hex string).",
      "pattern": "^[a-f0-9]{64}$"
    },
    "version": {
      "type": "string",
      "description": "Binary version from CARGO_PKG_VERSION.",
      "minLength": 1,
      "maxLength": 64
    },
    "target": {
      "type": "string",
      "description": "Target triple (e.g., 'x86_64-unknown-linux-gnu').",
      "minLength": 1,
      "maxLength": 128
    },
    "profile": {
      "type": "string",
      "description": "Build profile ('debug' or 'release').",
      "enum": ["debug", "release"]
    },
    "commands": {
      "type": "array",
      "description": "Commands exposed by the binary.",
      "maxItems": 1024,
      "items": {
        "$ref": "#/$defs/Command"
      }
    },
    "capabilities": {
      "type": "array",
      "description": "Capabilities claimed by the binary.",
      "maxItems": 1024,
      "items": {
        "$ref": "#/$defs/Capability"
      }
    },
    "selftest_refs": {
      "type": "object",
      "description": "Mapping from selftest IDs to capability IDs. Keys are sorted alphabetically for deterministic serialization.",
      "maxProperties": 10000,
      "additionalProperties": {
        "type": "string",
        "description": "Capability ID that this selftest verifies."
      }
    }
  },
  "unevaluatedProperties": false,
  "$defs": {
    "Command": {
      "type": "object",
      "description": "A CLI command exposed by the binary.",
      "required": ["name"],
      "properties": {
        "name": {
          "type": "string",
          "description": "Command name (e.g., 'start', 'cac apply-patch').",
          "minLength": 1,
          "maxLength": 128
        },
        "description": {
          "type": "string",
          "description": "Human-readable description of what the command does.",
          "maxLength": 4096
        },
        "input_schema_ref": {
          "type": "string",
          "description": "Reference to the input schema (JSON Schema stable ID or path).",
          "maxLength": 1024
        },
        "output_schema_ref": {
          "type": "string",
          "description": "Reference to the output schema (JSON Schema stable ID or path).",
          "maxLength": 1024
        },
        "subcommands": {
          "type": "array",
          "description": "Subcommands of this command.",
          "items": {
            "$ref": "#/$defs/Command"
          }
        }
      },
      "unevaluatedProperties": false
    },
    "Capability": {
      "type": "object",
      "description": "A capability claimed by the binary.",
      "required": ["id", "verification_method"],
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the capability (alphanumeric, hyphens, underscores, colons).",
          "pattern": "^[a-zA-Z0-9_:-]+$",
          "minLength": 1,
          "maxLength": 256
        },
        "description": {
          "type": "string",
          "description": "Human-readable description of the capability.",
          "maxLength": 4096
        },
        "verification_method": {
          "type": "string",
          "description": "How this capability is verified.",
          "enum": ["selftest", "static_analysis", "declared"]
        },
        "selftest_id": {
          "type": "string",
          "description": "Reference to the selftest that verifies this capability (required when verification_method is 'selftest').",
          "pattern": "^[a-zA-Z0-9_:-]+$",
          "maxLength": 256
        }
      },
      "unevaluatedProperties": false,
      "if": {
        "properties": {
          "verification_method": { "const": "selftest" }
        }
      },
      "then": {
        "required": ["selftest_id"]
      }
    },
    "SelftestRef": {
      "type": "object",
      "description": "A reference mapping a selftest to a capability.",
      "required": ["selftest_id", "capability_id"],
      "properties": {
        "selftest_id": {
          "type": "string",
          "description": "The selftest ID (test function name or unique identifier).",
          "pattern": "^[a-zA-Z0-9_:-]+$",
          "maxLength": 256
        },
        "capability_id": {
          "type": "string",
          "description": "The capability ID this selftest verifies.",
          "pattern": "^[a-zA-Z0-9_:-]+$",
          "maxLength": 256
        }
      },
      "unevaluatedProperties": false
    }
  }
}
