{
  "$id": "cac.aat_receipt.v1.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "allOf": [
    {
      "$ref": "cac.artifact.envelope.v1.schema.json"
    },
    {
      "properties": {
        "kind": {
          "const": "receipt.aat"
        },
        "payload": {
          "additionalProperties": false,
          "properties": {
            "environment": {
              "additionalProperties": false,
              "properties": {
                "apm2_version": {
                  "type": "string"
                },
                "arch": {
                  "type": "string"
                },
                "git_commit": {
                  "type": "string"
                },
                "os": {
                  "type": "string"
                }
              },
              "type": "object"
            },
            "finished_at": {
              "$ref": "cac.common.v1.schema.json#/$defs/timestamp"
            },
            "overall_result": {
              "enum": [
                "PASS",
                "FAIL"
              ],
              "type": "string"
            },
            "run_id": {
              "type": "string"
            },
            "started_at": {
              "$ref": "cac.common.v1.schema.json#/$defs/timestamp"
            },
            "suite_results": {
              "items": {
                "additionalProperties": false,
                "properties": {
                  "artifacts": {
                    "items": {
                      "$ref": "cac.common.v1.schema.json#/$defs/content_hash"
                    },
                    "type": "array"
                  },
                  "duration_ms": {
                    "minimum": 0,
                    "type": "integer"
                  },
                  "failed_tests": {
                    "items": {
                      "type": "string"
                    },
                    "type": "array"
                  },
                  "result": {
                    "enum": [
                      "PASS",
                      "FAIL"
                    ],
                    "type": "string"
                  },
                  "suite_id": {
                    "type": "string"
                  }
                },
                "required": [
                  "suite_id",
                  "result",
                  "duration_ms"
                ],
                "type": "object"
              },
              "minItems": 1,
              "type": "array"
            }
          },
          "required": [
            "run_id",
            "suite_results",
            "overall_result",
            "started_at",
            "finished_at"
          ],
          "type": "object"
        },
        "schema": {
          "const": "cac.aat_receipt.v1"
        }
      }
    }
  ],
  "title": "CAC AATReceipt v1"
}
