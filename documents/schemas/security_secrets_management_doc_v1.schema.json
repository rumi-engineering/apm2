{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://apm2.dev/schemas/apm2/security_secrets_management_doc_v1.schema.json",
  "title": "SecuritySecretsManagementDocumentV1",
  "type": "object",
  "required": [
    "schema",
    "schema_version",
    "kind",
    "meta",
    "payload"
  ],
  "properties": {
    "schema": {
      "type": "string",
      "const": "apm2.security.secrets_management_doc.v1"
    },
    "schema_version": {
      "type": "string",
      "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$"
    },
    "kind": {
      "type": "string",
      "const": "security.secrets_management_document"
    },
    "meta": {
      "type": "object",
      "required": [
        "canonicalizer",
        "classification",
        "created_at",
        "source_of_truth_refs",
        "stable_id",
        "status"
      ],
      "properties": {
        "stable_id": {
          "type": "string",
          "pattern": "^dcp://[a-z0-9.-]+/[A-Za-z0-9_./:-]+(@[A-Za-z0-9_.-]+)?$"
        },
        "status": {
          "type": "string",
          "enum": [
            "ACTIVE",
            "DRAFT",
            "DEPRECATED"
          ]
        },
        "classification": {
          "type": "string",
          "enum": [
            "PUBLIC",
            "INTERNAL",
            "CONFIDENTIAL",
            "RESTRICTED"
          ]
        },
        "source_of_truth_refs": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string",
            "minLength": 1,
            "maxLength": 256
          }
        },
        "last_aligned_rfc": {
          "type": "string",
          "minLength": 1,
          "maxLength": 64
        },
        "replaces": {
          "type": "string",
          "minLength": 1,
          "maxLength": 256
        },
        "created_at": {
          "type": "string",
          "format": "date-time"
        },
        "updated_at": {
          "type": "string",
          "format": "date-time"
        },
        "canonicalizer": {
          "type": "object",
          "required": [
            "canonicalizer_id",
            "canonicalizer_version",
            "vectors_ref"
          ],
          "properties": {
            "canonicalizer_id": {
              "type": "string",
              "minLength": 1,
              "maxLength": 128
            },
            "canonicalizer_version": {
              "type": "string",
              "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$"
            },
            "vectors_ref": {
              "type": "string",
              "pattern": "^dcp://[a-z0-9.-]+/[A-Za-z0-9_./:-]+(@[A-Za-z0-9_.-]+)?$"
            }
          },
          "additionalProperties": false
        },
        "provenance": {
          "type": "object",
          "properties": {
            "actor_id": {
              "type": "string",
              "minLength": 1,
              "maxLength": 128
            },
            "work_id": {
              "type": "string",
              "minLength": 1,
              "maxLength": 128
            },
            "source_receipts": {
              "type": "array",
              "items": {
                "type": "string",
                "pattern": "^dcp://[a-z0-9.-]+/[A-Za-z0-9_./:-]+(@[A-Za-z0-9_.-]+)?$"
              }
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },
    "payload": {
      "type": "object",
      "required": [
        "objective",
        "authoritative_runtime_semantics",
        "compliance_mappings",
        "threat_posture",
        "layered_prevention_model",
        "secret_classes",
        "runtime_storage_controls",
        "in_memory_controls",
        "distribution_controls",
        "labeling_and_taint_controls",
        "logging_and_artifact_controls",
        "pre_persistence_scanning",
        "ci_cd_controls",
        "rotation_policy",
        "keyless_signing_boundary",
        "incident_response_sequence",
        "local_testing_controls",
        "summary_invariants",
        "scale_profile",
        "cryptography_posture"
      ],
      "properties": {
        "objective": {
          "type": "string",
          "minLength": 1,
          "maxLength": 2048
        },
        "authoritative_runtime_semantics": {
          "type": "string",
          "minLength": 1,
          "maxLength": 1024
        },
        "compliance_mappings": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "#/$defs/compliance_mapping"
          }
        },
        "threat_posture": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string",
            "minLength": 1,
            "maxLength": 1024
          }
        },
        "layered_prevention_model": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "#/$defs/numbered_control"
          }
        },
        "secret_classes": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "#/$defs/secret_class"
          }
        },
        "runtime_storage_controls": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string",
            "minLength": 1,
            "maxLength": 1024
          }
        },
        "in_memory_controls": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string",
            "minLength": 1,
            "maxLength": 1024
          }
        },
        "distribution_controls": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string",
            "minLength": 1,
            "maxLength": 1024
          }
        },
        "labeling_and_taint_controls": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string",
            "minLength": 1,
            "maxLength": 1024
          }
        },
        "logging_and_artifact_controls": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string",
            "minLength": 1,
            "maxLength": 1024
          }
        },
        "pre_persistence_scanning": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string",
            "minLength": 1,
            "maxLength": 1024
          }
        },
        "ci_cd_controls": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string",
            "minLength": 1,
            "maxLength": 1024
          }
        },
        "rotation_policy": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string",
            "minLength": 1,
            "maxLength": 512
          }
        },
        "keyless_signing_boundary": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string",
            "minLength": 1,
            "maxLength": 512
          }
        },
        "incident_response_sequence": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "#/$defs/numbered_control"
          }
        },
        "local_testing_controls": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string",
            "minLength": 1,
            "maxLength": 512
          }
        },
        "summary_invariants": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string",
            "minLength": 1,
            "maxLength": 512
          }
        },
        "scale_profile": {
          "type": "object",
          "required": [
            "capacity_target",
            "high_volume_controls"
          ],
          "properties": {
            "capacity_target": {
              "type": "string",
              "const": "multi-exabyte"
            },
            "high_volume_controls": {
              "type": "array",
              "minItems": 1,
              "items": {
                "type": "string",
                "minLength": 1,
                "maxLength": 512
              }
            }
          },
          "additionalProperties": false
        },
        "cryptography_posture": {
          "type": "object",
          "required": [
            "pqc_status",
            "pqc_note"
          ],
          "properties": {
            "pqc_status": {
              "type": "string",
              "const": "DEFERRED"
            },
            "pqc_note": {
              "type": "string",
              "minLength": 1,
              "maxLength": 512
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    }
  },
  "$defs": {
    "compliance_mapping": {
      "type": "object",
      "required": [
        "framework",
        "control_refs",
        "mapping_statement"
      ],
      "properties": {
        "framework": {
          "type": "string",
          "minLength": 1,
          "maxLength": 64
        },
        "control_refs": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string",
            "minLength": 1,
            "maxLength": 64
          }
        },
        "mapping_statement": {
          "type": "string",
          "minLength": 1,
          "maxLength": 1024
        }
      },
      "additionalProperties": false
    },
    "numbered_control": {
      "type": "object",
      "required": [
        "order",
        "statement"
      ],
      "properties": {
        "order": {
          "type": "integer",
          "minimum": 1
        },
        "statement": {
          "type": "string",
          "minLength": 1,
          "maxLength": 1024
        }
      },
      "additionalProperties": false
    },
    "secret_class": {
      "type": "object",
      "required": [
        "class_id",
        "name",
        "custody_boundary",
        "storage_location",
        "forbidden_locations"
      ],
      "properties": {
        "class_id": {
          "type": "string",
          "pattern": "^SECRET-CLASS-[0-9]{2}$"
        },
        "name": {
          "type": "string",
          "minLength": 1,
          "maxLength": 128
        },
        "custody_boundary": {
          "type": "string",
          "minLength": 1,
          "maxLength": 256
        },
        "storage_location": {
          "type": "string",
          "minLength": 1,
          "maxLength": 256
        },
        "forbidden_locations": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string",
            "minLength": 1,
            "maxLength": 256
          }
        }
      },
      "additionalProperties": false
    }
  },
  "unevaluatedProperties": false
}
