{
  "$id": "cac.policy_profile.v1.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "allOf": [
    {
      "$ref": "cac.artifact.envelope.v1.schema.json"
    },
    {
      "properties": {
        "kind": {
          "const": "policy.profile"
        },
        "payload": {
          "additionalProperties": false,
          "properties": {
            "default_decision": {
              "enum": [
                "DENY",
                "ALLOW"
              ],
              "type": "string"
            },
            "policy_name": {
              "type": "string"
            },
            "rules": {
              "items": {
                "additionalProperties": false,
                "properties": {
                  "applies_to": {
                    "items": {
                      "type": "string"
                    },
                    "type": "array"
                  },
                  "conditions": {
                    "type": "object"
                  },
                  "decision": {
                    "enum": [
                      "DENY",
                      "ALLOW"
                    ],
                    "type": "string"
                  },
                  "rationale_code": {
                    "type": "string"
                  },
                  "rule_id": {
                    "type": "string"
                  }
                },
                "required": [
                  "rule_id",
                  "decision",
                  "applies_to"
                ],
                "type": "object"
              },
              "minItems": 1,
              "type": "array"
            }
          },
          "required": [
            "policy_name",
            "rules"
          ],
          "type": "object"
        },
        "schema": {
          "const": "cac.policy_profile.v1"
        }
      }
    }
  ],
  "title": "CAC PolicyProfile v1"
}
