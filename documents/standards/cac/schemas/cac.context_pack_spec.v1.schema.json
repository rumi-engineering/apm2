{
  "$id": "cac.context_pack_spec.v1.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "allOf": [
    {
      "$ref": "cac.artifact.envelope.v1.schema.json"
    },
    {
      "properties": {
        "kind": {
          "const": "context_pack.spec"
        },
        "payload": {
          "additionalProperties": false,
          "properties": {
            "allowlist": {
              "description": "Optional patterns for stable IDs permitted to be fetched by consumption holons (tighten reads).",
              "items": {
                "type": "string"
              },
              "type": "array"
            },
            "description": {
              "type": "string"
            },
            "exports": {
              "items": {
                "additionalProperties": false,
                "properties": {
                  "export_kind": {
                    "type": "string"
                  },
                  "notes": {
                    "type": "string"
                  },
                  "target_profile_id": {
                    "$ref": "cac.common.v1.schema.json#/$defs/stable_id"
                  }
                },
                "required": [
                  "target_profile_id"
                ],
                "type": "object"
              },
              "type": "array"
            },
            "includes": {
              "items": {
                "additionalProperties": false,
                "properties": {
                  "pin_policy": {
                    "enum": [
                      "pin_required",
                      "pin_optional",
                      "floating_allowed"
                    ],
                    "type": "string"
                  },
                  "purpose": {
                    "type": "string"
                  },
                  "stable_id": {
                    "$ref": "cac.common.v1.schema.json#/$defs/stable_id"
                  }
                },
                "required": [
                  "stable_id"
                ],
                "type": "object"
              },
              "minItems": 1,
              "type": "array"
            },
            "mode": {
              "enum": [
                "CONSUME",
                "PRODUCE"
              ],
              "type": "string"
            },
            "pack_name": {
              "minLength": 1,
              "type": "string"
            },
            "target_profile_id": {
              "$ref": "cac.common.v1.schema.json#/$defs/stable_id"
            }
          },
          "required": [
            "pack_name",
            "mode",
            "includes",
            "target_profile_id"
          ],
          "type": "object"
        },
        "schema": {
          "const": "cac.context_pack_spec.v1"
        }
      }
    }
  ],
  "title": "CAC ContextPackSpec v1"
}
