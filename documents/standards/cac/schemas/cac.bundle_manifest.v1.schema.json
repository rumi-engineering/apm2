{
  "$id": "cac.bundle_manifest.v1.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "allOf": [
    {
      "$ref": "cac.artifact.envelope.v1.schema.json"
    },
    {
      "properties": {
        "kind": {
          "const": "bundle.manifest"
        },
        "schema": {
          "const": "cac.bundle_manifest.v1"
        },
        "payload": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "bundle_id": {
              "type": "string",
              "minLength": 1
            },
            "generated_at": {
              "$ref": "cac.common.v1.schema.json#/$defs/timestamp"
            },
            "index_ref": {
              "type": "string"
            },
            "skill_spec": {
              "$ref": "#/$defs/bundle_ref"
            },
            "instruction_specs": {
              "type": "array",
              "items": {
                "$ref": "#/$defs/bundle_ref_with_id"
              }
            },
            "notes": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          },
          "required": [
            "bundle_id",
            "generated_at",
            "index_ref",
            "instruction_specs"
          ]
        }
      }
    }
  ],
  "$defs": {
    "bundle_ref": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "stable_id": {
          "$ref": "cac.common.v1.schema.json#/$defs/stable_id"
        },
        "path": {
          "type": "string"
        }
      },
      "required": [
        "stable_id",
        "path"
      ]
    },
    "bundle_ref_with_id": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "id": {
          "type": "string",
          "minLength": 1
        },
        "stable_id": {
          "$ref": "cac.common.v1.schema.json#/$defs/stable_id"
        },
        "path": {
          "type": "string"
        }
      },
      "required": [
        "id",
        "stable_id",
        "path"
      ]
    }
  },
  "title": "CAC BundleManifest v1"
}
