{
  "$id": "cac.changeset_report.v1.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "allOf": [
    {
      "$ref": "cac.artifact.envelope.v1.schema.json"
    },
    {
      "properties": {
        "kind": {
          "const": "changeset.report"
        },
        "payload": {
          "additionalProperties": false,
          "properties": {
            "affected_packs": {
              "items": {
                "$ref": "cac.common.v1.schema.json#/$defs/stable_id"
              },
              "type": "array"
            },
            "base_hash": {
              "$ref": "cac.common.v1.schema.json#/$defs/content_hash"
            },
            "change_id": {
              "type": "string"
            },
            "compatibility_notes": {
              "items": {
                "type": "string"
              },
              "type": "array"
            },
            "new_hash": {
              "$ref": "cac.common.v1.schema.json#/$defs/content_hash"
            },
            "patch_record_hash": {
              "$ref": "cac.common.v1.schema.json#/$defs/content_hash"
            },
            "summary": {
              "additionalProperties": false,
              "properties": {
                "added": {
                  "items": {
                    "type": "string"
                  },
                  "type": "array"
                },
                "modified": {
                  "items": {
                    "type": "string"
                  },
                  "type": "array"
                },
                "removed": {
                  "items": {
                    "type": "string"
                  },
                  "type": "array"
                }
              },
              "required": [
                "added",
                "removed",
                "modified"
              ],
              "type": "object"
            }
          },
          "required": [
            "change_id",
            "base_hash",
            "new_hash",
            "patch_record_hash",
            "summary"
          ],
          "type": "object"
        },
        "schema": {
          "const": "cac.changeset_report.v1"
        }
      }
    }
  ],
  "title": "CAC ChangeSetReport v1"
}
