{
  "$id": "cac.vendor_profile.v1.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "allOf": [
    {
      "$ref": "cac.artifact.envelope.v1.schema.json"
    },
    {
      "properties": {
        "kind": {
          "const": "vendor.profile"
        },
        "payload": {
          "additionalProperties": false,
          "properties": {
            "conformance_tests": {
              "items": {
                "additionalProperties": false,
                "properties": {
                  "params": {
                    "type": "object"
                  },
                  "test_id": {
                    "type": "string"
                  },
                  "test_kind": {
                    "enum": [
                      "path_exists",
                      "glob_count",
                      "file_contains",
                      "json_schema_validate"
                    ],
                    "type": "string"
                  }
                },
                "required": [
                  "test_id",
                  "test_kind"
                ],
                "type": "object"
              },
              "minItems": 1,
              "type": "array"
            },
            "export_contract": {
              "additionalProperties": false,
              "properties": {
                "artifacts": {
                  "items": {
                    "additionalProperties": false,
                    "properties": {
                      "artifact_kind": {
                        "type": "string"
                      },
                      "mapping": {
                        "additionalProperties": false,
                        "properties": {
                          "frontmatter": {
                            "type": "object"
                          },
                          "line_endings": {
                            "enum": [
                              "lf",
                              "crlf"
                            ],
                            "type": "string"
                          },
                          "path_template": {
                            "type": "string"
                          },
                          "render_template_id": {
                            "type": "string"
                          }
                        },
                        "required": [
                          "path_template",
                          "render_template_id"
                        ],
                        "type": "object"
                      }
                    },
                    "required": [
                      "artifact_kind",
                      "mapping"
                    ],
                    "type": "object"
                  },
                  "minItems": 1,
                  "type": "array"
                },
                "root_dir": {
                  "minLength": 1,
                  "type": "string"
                }
              },
              "required": [
                "root_dir",
                "artifacts"
              ],
              "type": "object"
            },
            "templates": {
              "items": {
                "additionalProperties": false,
                "properties": {
                  "template_body": {
                    "type": "string"
                  },
                  "template_id": {
                    "type": "string"
                  },
                  "template_kind": {
                    "enum": [
                      "markdown",
                      "json",
                      "text"
                    ],
                    "type": "string"
                  }
                },
                "required": [
                  "template_id",
                  "template_kind",
                  "template_body"
                ],
                "type": "object"
              },
              "type": "array"
            },
            "vendor_id": {
              "minLength": 1,
              "type": "string"
            },
            "vendor_profile_version": {
              "minLength": 1,
              "type": "string"
            }
          },
          "required": [
            "vendor_id",
            "vendor_profile_version",
            "export_contract",
            "conformance_tests"
          ],
          "type": "object"
        },
        "schema": {
          "const": "cac.vendor_profile.v1"
        }
      }
    }
  ],
  "title": "CAC VendorProfile v1"
}
